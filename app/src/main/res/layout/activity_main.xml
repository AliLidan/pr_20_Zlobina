<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#13FAC8"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editT_id"
        android:layout_width="332dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="id"
        android:inputType="none"
        android:textColor="#000000"
        app:backgroundTint="#4FC51C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <EditText
        android:id="@+id/editT_name"
        android:layout_width="332dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:backgroundTint="#4FC51C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editT_id"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/editT_age"
        android:layout_width="332dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="age"
        android:inputType="number"
        android:textColor="#000000"
        app:backgroundTint="#4FC51C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editT_name"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/button"
        android:layout_width="246dp"
        android:layout_height="51dp"
        android:onClick="insert"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editT_age"
        app:layout_constraintVertical_bias="0.029" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="361dp"
        android:layout_height="267dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:text="Удалить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list1" />


</androidx.constraintlayout.widget.ConstraintLayout>